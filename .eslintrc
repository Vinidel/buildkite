{
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "arrow-body-style": 0,
    "no-unused-expressions": 1, //TODO: how do we disable this rule only for tests?
    "max-nested-callbacks": 0,
    "react/prop-types": 2,
    "no-invalid-this": 0,
    "import/no-named-as-default": 0,
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": false,
      "jsxBracketSameLine": false
    }],
    "camelcase": ["error", {"properties": "never"}],
    "no-console": "error"
  }
}
